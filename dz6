def find_largest_number(string_of_numbers):
    """
    Функция принимает строку чисел, разделённых пробелами,
    и возвращает наибольшее число.
    """
    try:
        # Разделяем строку на список строк и преобразуем в целые числа
        numbers = list(map(int, string_of_numbers.split()))

        # Инициализируем переменную для хранения наибольшего числа
        largest = numbers[0]

        # Проходим по списку и находим наибольшее число
        for num in numbers:
            if num > largest:
                largest = num

        return largest
    except ValueError:
        # Обработка ошибки, если введены нечисловые значения
        return "Ошибка: Введите только числа через пробел."

# Основная часть программы
def main():
    print("Программа для нахождения наибольшего числа из списка чисел.")

    # Запрашиваем у пользователя ввод строки с числами
    input_string = input("Введите числа через пробел: ")

    # Находим наибольшее число
    result = find_largest_number(input_string)

    # Выводим результат
    if isinstance(result, int):
        print(f"Наибольшее число: {result}")
    else:
        print(result)  # Вывод ошибки, если введены неверные данные

# Запуск программы
if __name__ == "__main__":
    main()
